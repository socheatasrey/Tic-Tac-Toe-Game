<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" prefWidth="400" prefHeight="600" style="-fx-background-color: white;">

    <!-- Back Button -->
    <Button layoutX="10" layoutY="10" text="←" fx:id="backButton" />

    <!-- Main container -->
    <VBox layoutX="100" layoutY="60" spacing="20" alignment="CENTER">
        <!-- Level Label -->
        <Label text="Level" font="$x1">
            <font>
                <Font size="24"/>
            </font>
        </Label>

        <!-- Smiley face (can be an emoji or image) -->
        <Label text="😊" style="-fx-font-size: 48px;" />

        <!-- Selected Level Button -->
        <Button text="Easy" fx:id="selectedLevelButton" style="-fx-font-size: 18px;" />

        <!-- Radio buttons for difficulty levels -->
        <VBox spacing="5" alignment="CENTER">
            <HBox spacing="20" alignment="CENTER">
                <RadioButton text="" fx:id="easyRadio"/>
                <RadioButton text="" fx:id="mediumRadio"/>
                <RadioButton text="" fx:id="hardRadio"/>
            </HBox>
            <HBox spacing="30" alignment="CENTER">
                <Label text="Easy" />
                <Label text="Medium" />
                <Label text="Hard" />
            </HBox>
        </VBox>
    </VBox>
</AnchorPane>
