<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Group?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Scene xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.RegisterController">
    <AnchorPane prefHeight="750.0" prefWidth="360.0" style="-fx-background-color: white;" styleClass="bg_image">
      <children>
         <Label fx:id="lbl_register" layoutX="96.0" layoutY="78.0" text="Register" textFill="#2d3d2d">
            <font>
               <Font name="Showcard Gothic" size="36.0" />
            </font>
         </Label>
         <Button fx:id="bttn_register" layoutX="97.0" layoutY="422.0" mnemonicParsing="false" onAction="#bttn_register_action" prefHeight="50.0" prefWidth="165.0" styleClass="btt_profile" stylesheets="@../css/style.css" text="Register" textFill="#2d3d2d">
            <font>
               <Font name="Showcard Gothic" size="24.0" />
            </font>
         </Button>
         <Label layoutX="14.0" layoutY="189.0" text="name" textFill="#2d3d2d">
            <font>
               <Font name="Showcard Gothic" size="17.0" />
            </font>
         </Label>
         <TextField fx:id="Textfield_username_register" layoutX="123.0" layoutY="187.0" promptText="Enter your username" />
         <Label layoutX="13.0" layoutY="250.0" text="password" textFill="#2d3d2d">
            <font>
               <Font name="Showcard Gothic" size="17.0" />
            </font>
         </Label>
         <Group layoutX="123.0" layoutY="248.0">
            <children>
               <TextField fx:id="Textfield_password_register" promptText="enter your password" />
               <PasswordField fx:id="passwordfield_register" promptText="Enter your password" />
            </children>
         </Group>
         <CheckBox fx:id="checkbox_show_password" layoutX="286.0" layoutY="252.0" mnemonicParsing="false" onAction="#checkbox_show_password_action" text="Show" />
         <Label layoutX="20.0" layoutY="314.0" text="comfirm" textFill="#2d3d2d">
            <font>
               <Font name="Showcard Gothic" size="17.0" />
            </font>
         </Label>
         <Group layoutX="123.0" layoutY="312.0">
            <children>
               <TextField fx:id="Textfield_verify_register" promptText="Enter your comfirm password" />
               <VBox>
                  <children>
                     <PasswordField fx:id="passwordfield_verify_register" promptText="Enter your comfirm password" />
                     <Label fx:id="lbl_match_password" text="match" />
                  </children>
               </VBox>
            </children>
         </Group>
         <Button fx:id="bttn_go_to_sign_in" layoutX="179.0" layoutY="676.0" mnemonicParsing="false" onAction="#bttn_go_to_sign_in_action" prefHeight="50.0" prefWidth="165.0" styleClass="btt_profile" stylesheets="@../css/style.css" text="Sign in " textFill="#2d3d2d">
            <font>
               <Font name="Showcard Gothic" size="24.0" />
            </font>
         </Button>
         <Label layoutX="181.0" layoutY="643.0" text="already have account?" textFill="#2d3d2d">
            <font>
               <Font name="Showcard Gothic" size="13.0" />
            </font>
         </Label>
         <Label fx:id="lbl_register_status" layoutX="166.0" layoutY="513.0" text="status" />
      </children></AnchorPane>
</Scene>
