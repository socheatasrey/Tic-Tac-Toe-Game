<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="your.package.Controller"
            prefWidth="400.0" prefHeight="200.0">
    
    <children>
        <VBox alignment="CENTER" spacing="20.0" AnchorPane.topAnchor="20.0" AnchorPane.bottomAnchor="20.0"
              AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
            
            <Label fx:id="labelStatus" text="Status: Playing" style="-fx-font-size: 16px;"/>

            <Button fx:id="pauseButton" text="⏸️ Pause" onAction="#onPauseClicked"
                    style="-fx-font-size: 14px; -fx-padding: 8 16;"/>

        </VBox>
    </children>
</AnchorPane>
