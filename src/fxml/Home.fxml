            </image>
         </ImageView>
         <Button fx:id="button_profile" layoutX="30.0" layoutY="35.0" mnemonicParsing="false" onAction="#button_profile_action" prefHeight="50.0" prefWidth="60.0" styleClass="btt_profile" stylesheets="@../css/style.css" textFill="#2d3d2d">
            <font>
               <Font name="Showcard Gothic" size="24.0" />
            </font>
            <graphic>
               <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@../resources/images/profile.png" />
                  </image>
               </ImageView>
            </graphic>
         </Button>
         <ImageView fitHeight="186.0" fitWidth="176.0" layoutX="92.0" layoutY="211.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@../resources/images/bg/TicTacToe_logo.jpg" />
            </image>
         </ImageView>
         <Label layoutX="63.0" layoutY="171.0" text="TICTACTOE" textFill="#2d3d2d">
