<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="750.0" prefWidth="360.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="your.package.name.MediaController">
   <center>
        <VBox alignment="CENTER" spacing="15.0" BorderPane.alignment="CENTER">
           <Button style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Pause" />
            <!-- Row 1: Volume + Stop -->
            <HBox alignment="CENTER" spacing="20.0">
                <Button fx:id="btn_volume" onAction="#handleVolume" prefHeight="50.0" prefWidth="50.0" text="🔊">
               <font>
                  <Font size="18.0" />
               </font></Button>
                <Button fx:id="btn_stop" onAction="#handleStop" prefHeight="50.0" prefWidth="50.0" text="⏹">
               <font>
                  <Font size="18.0" />
               </font></Button>
            </HBox>

            <!-- Row 2: Home + Restart -->
            <HBox alignment="CENTER" spacing="20.0">
                <Button fx:id="btn_home" onAction="#handleHome" prefHeight="50.0" prefWidth="50.0" text="🏠">
               <font>
                  <Font size="18.0" />
               </font></Button>
                <Button fx:id="btn_restart" onAction="#handleRestart" prefHeight="50.0" prefWidth="50.0" text="🔁">
               <font>
                  <Font size="18.0" />
               </font></Button>
            </HBox>

            <!-- Row 3: Play -->
            <Button fx:id="btn_play" minHeight="50.0" onAction="#handlePlay" prefWidth="50.0" text="▶️">
            <font>
               <Font size="18.0" />
            </font></Button>
        </VBox>
   </center>
</BorderPane>
